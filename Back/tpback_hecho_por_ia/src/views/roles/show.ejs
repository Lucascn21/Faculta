<div class="card mb-4">
    <div class="card-header">
        <h5 class="card-title mb-0">Información del Rol</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <p><strong>ID:</strong> <%= role.id %></p>
            </div>
            <div class="col-md-4">
                <p><strong>Nombre:</strong> <%= role.name %></p>
            </div>
            <div class="col-md-4">
                <p><strong>Descripción:</strong> <%= role.description || '-' %></p>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="btn-group">
            <a href="/roles" class="btn btn-secondary">Volver</a>
            <a href="/roles/<%= role.id %>/edit" class="btn btn-primary">Editar</a>
            <a href="/roles/<%= role.id %>/permissions" class="btn btn-success">Gestionar Permisos</a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Permisos Asignados</h5>
    </div>
    <div class="card-body">
        <% if (permissions && permissions.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% permissions.forEach(function(permission) { %>
                            <tr>
                                <td><%= permission.id %></td>
                                <td><%= permission.name %></td>
                                <td><%= permission.description || '-' %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="alert alert-info">
                Este rol no tiene permisos asignados.
                <a href="/roles/<%= role.id %>/permissions" class="alert-link">Asignar permisos</a>
            </div>
        <% } %>
    </div>
</div>
