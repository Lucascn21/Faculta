<div class="row mb-4">
    <div class="col text-end">
        <a href="/roles/create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i> Nuevo Rol
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <% if (roles && roles.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% roles.forEach(function(role) { %>
                            <tr>
                                <td><%= role.id %></td>
                                <td><%= role.name %></td>
                                <td><%= role.description || '-' %></td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/roles/<%= role.id %>" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/roles/<%= role.id %>/edit" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/roles/<%= role.id %>/permissions" class="btn btn-sm btn-outline-success">
                                            <i class="fas fa-key"></i>
                                        </a>
                                        <form action="/roles/<%= role.id %>?_method=DELETE" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('¿Estás seguro de eliminar este rol?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="alert alert-info">
                No se encontraron roles.
            </div>
        <% } %>
    </div>
</div>
