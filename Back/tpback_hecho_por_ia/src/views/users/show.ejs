<div class="card mb-4">
    <div class="card-header">
        <h5 class="card-title mb-0">Información del Usuario</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <p><strong>ID:</strong> <%= user.id %></p>
            </div>
            <div class="col-md-3">
                <p><strong>Usuario:</strong> <%= user.username %></p>
            </div>
            <div class="col-md-3">
                <p><strong>Email:</strong> <%= user.email %></p>
            </div>
            <div class="col-md-3">
                <p><strong>Rol:</strong> <span class="badge bg-info"><%= user.role_name %></span></p>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a href="/users" class="btn btn-secondary">Volver</a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Permisos del Usuario</h5>
        <p class="text-muted mb-0">Estos permisos provienen del rol asignado al usuario</p>
    </div>
    <div class="card-body">
        <% if (permissions && permissions.length > 0) { %>
            <div class="row g-3">
                <% permissions.forEach(function(permission) { %>
                    <div class="col-md-4">
                        <div class="card h-100 bg-light">
                            <div class="card-body">
                                <h6 class="card-title"><%= permission.name %></h6>
                                <% if (permission.description) { %>
                                    <p class="card-text text-muted"><%= permission.description %></p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-info">
                Este usuario no tiene permisos asignados a través de su rol.
            </div>
        <% } %>
    </div>
</div>
